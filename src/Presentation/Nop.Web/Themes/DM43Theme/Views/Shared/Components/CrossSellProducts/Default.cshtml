@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">
        <div class="title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid owl-carousel" id="crosssells-products-grid">
            @foreach (var product in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", product)
                </div>
            }
        </div>
    </div>

    <script asp-location="Footer">
        $(document).ready(function () {
            $('#crosssells-products-grid').owlCarousel({
                loop: false,
                margin: 30,
                dots: false,
                nav: true,
                responsive: {
                    0: {
                        margin: 15,
                        items: 1
                    },
                    481: {
                        margin: 15,
                        items: 2
                    },
                    769: {
                        items: 3
                    },
                    1000: {
                        items: 4
                    }
                }
            });
        });
    </script>
}
